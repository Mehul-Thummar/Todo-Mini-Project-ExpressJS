<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <!-- Todo Delete Css -->
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: courier;
        }

        body {
            height: 100vh;
            margin: 0;
            background: var(--background);
            box-sizing: border-box;
            font-family: "poppins";
            /* background: var(--background); */
            /* color: var(--color); */

        }

        /* Header/logo Title */
        .header {
            padding: 8px;
            text-align: center;
            /* background-color: #eae0c7; */
            background-color: wheat;
            color: rgb(37, 8, 64);
        }

        /* Style the top navigation bar */
        .navbar {
            overflow: hidden;
            background-color: #333;
        }

        /* Style the navigation bar links */
        .navbar a {
            float: left;
            display: block;
            color: white;
            text-align: center;
            padding: 14px 20px;
            text-decoration: none;
            font-weight: bolder;
            font-size: 20px;
        }

        /* Right-aligned link */
        .navbar a.right {
            float: right;
        }

        /* Change color on hover */
        .navbar a:hover {
            background-color: white;
            /* background-color: #ddd; */
            border-radius: 8px;
            color: black;
        }

        .submit-btn {
            display: block;
            width: 100%;
            padding: 10px;
            background-color: #472dbb;
            color: #fff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        .submit-btn:hover {
            background-color: #4565a0;
        }

        p {
            margin-top: 15px;
        }

        :root {
            --background: #1a1a2e;
            --color: #ffffff;
            --primary-color: #0f3460;
        }

        html {
            scroll-behavior: smooth;
        }

        a {
            text-decoration: none;
            color: var(--color);
        }

        .container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .form-container {
            border: 1px solid hsla(0, 0%, 65%, 0.158);
            box-shadow: 0 0 36px 1px rgba(0, 0, 0, 0.2);
            border-radius: 10px;
            backdrop-filter: blur(20px);
            z-index: 99;
            padding: 2rem;
            -webkit-border-radius: 10px;
            -moz-border-radius: 10px;
            -ms-border-radius: 10px;
            -o-border-radius: 10px;
        }

        .circle {
            width: 8rem;
            height: 8rem;
            background: var(--primary-color);
            border-radius: 50%;
            -webkit-border-radius: 50%;
            -moz-border-radius: 50%;
            -ms-border-radius: 50%;
            -o-border-radius: 50%;
            position: absolute;
        }


        .circle-one {
            top: 0;
            left: 0;
            z-index: -1;
            transform: translate(-45%, -45%);
            -webkit-transform: translate(-45%, -45%);
            -moz-transform: translate(-45%, -45%);
            -ms-transform: translate(-45%, -45%);
            -o-transform: translate(-45%, -45%);
        }

        .circle-two {
            bottom: 0;
            right: 0;
            z-index: -1;
            transform: translate(45%, 45%);
            -webkit-transform: translate(45%, 45%);
            -moz-transform: translate(45%, 45%);
            -ms-transform: translate(45%, 45%);
            -o-transform: translate(45%, 45%);
        }

        ul {
            list-style: none;
        }

        .task {
            font-weight: 600;
            font-family: Arial, Helvetica, sans-serif;
            margin-left: 5px;
            text-transform: capitalize;
        }

        .todos li {
            height: 28px;
            width: 500px;
            background-color: wheat;
            color: black;
            margin-bottom: 5px;
            border: solid 1px black;
        }

        .todo {
            display: flex;
            justify-content: center;
        }

        .todos {
            margin-top: 10px;
        }

        .del-btn {
            margin-left: 5px;
            text-decoration: none;
            border-radius: 8px;
            border: none;
            padding: 5px;
            background-color: rgb(231, 79, 79);
            float: inline-end;
            font-weight: bold;
        }

        .com-btn {
            margin-left: 5px;
            text-decoration: none;
            border-radius: 8px;
            border: none;
            padding: 5px;
            background-color: rgb(79, 231, 94);
            float: inline-end;
            font-weight: bold;
        }
    </style>


</head>

<body>
    <div>
        <div class="header">
            <h2 style="font-size: 30px;">All Todo Task</h2>
        </div>
        <div class="form-container">
            <div class="navbar">
                <a href="/signup">SignUp</a>
                <a href="/todo/gettodo">Add Task</a>
                <a href="/logout" class="right">Logout</a>
                <a href="/profile" class="right">Profile</a>
            </div>
        </div>
        <div style="display: flex; justify-content: center;">
            <div class="todo" style="margin-right:10px;">
                <div class="todos">
                    <ul>
                        <% for(let i=0; i < todos.length; i++) { %>
                            <li data-id="<%= todos[i]._id %>">
                                <div class="task">
                                    <%= todos[i].task %>
                                        <form action="" method="post" class="com-form" style="display: inline; ">
                                            <button type="submit" class="com-btn">Complet</button>
                                        </form>
                                </div>
                            </li>
                            <% } %>
                    </ul>
                </div>
            </div>

            <div class="todo">
                <div class="todos">
                    <ul>
                        <% for(let i=0; i < todos.length; i++) { %>
                            <li data-id="<%= todos[i]._id %>">
                                <div class="task">
                                    <%= todos[i].task %>
                                        <form action="" method="post" class="del-form" style="display: inline; ">
                                            <button type="submit" class="del-btn">Delete</button>
                                        </form>
                                </div>
                            </li>
                            <% } %>
                    </ul>
                </div>
            </div>
        </div>

    </div>
    <div class="theme-btn-container"></div>

    <!-- Todo Complet Script -->

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const completeButtons = document.querySelectorAll('.com-btn');

            completeButtons.forEach(button => {
                button.addEventListener('click', function (event) {
                    event.preventDefault(); // Prevent default form submission

                    const listItem = button.closest('li');
                    const taskId = listItem.getAttribute('data-id');
                    const form = button.closest('form');

                    form.action = `/todo/${taskId}/complete`;

                    form.submit();
                });
            });
        });
    </script>

    <!-- Todo Delete Script -->

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const deleteButtons = document.querySelectorAll('.del-btn');

            deleteButtons.forEach(button => {
                button.addEventListener('click', function (event) {
                    event.preventDefault(); // Prevent default form submission

                    const listItem = button.closest('li');
                    const taskId = listItem.getAttribute('data-id');
                    const form = button.closest('form');

                    form.action = `/todo/${taskId}/delete`;

                    form.submit();
                });
            });
        });
    </script>



</body>

</html>
</body>

</html>
